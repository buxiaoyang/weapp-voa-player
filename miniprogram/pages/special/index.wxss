page
{
    height:100%;
}

.music-album {
    width: 100%;
    height: 960rpx;
    flex-direction: column;
    align-items: center;
    padding-top: 25rpx;
    overflow-y: scroll;
}

.music-ctrl {
    position: relative;
    bottom: 0rpx;
    background-color: #6d6d6d;
    width: 100%;
    height: 200rpx;
}

.m-progress
{
    height: 50rpx;
}

.progress {
    width: 530rpx;
    float: left;
    margin-top: 20rpx;
}
.left {
    font-size: 12px;
    color:#fff;
    width: 100rpx;
    float: left;
    margin: 5rpx;
}
.right {
    font-size: 12px;
    color:#fff;
    width: 100rpx;
    float: left;
    margin: 5rpx;
    text-align: right;
}

.m-control
{
    height: 150rpx;
}

.m-control .m-control-button
{
    width: 215px;
    margin: auto;
}

.m-control image {
    margin:10px 20px;
    width:30px;
    height:30px;
}

.m-control image.play {
    width:35px;
    height:35px;
}

.song-name
{
    padding: 10px;
    font-weight: bold;
}

.song-date
{
    padding-left: 10px;
}

.song-lyric
{
    padding: 10px;
}

.song-cpright
{
    padding: 10px;
}
